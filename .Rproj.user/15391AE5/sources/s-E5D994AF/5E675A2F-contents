```{r}
#2017-2018 rankings, with points (maximum 480)
hospitalranks_2017_html <- read_html("https://health.usnews.com/health-care/best-hospitals/articles/best-hospitals-honor-roll-and-overview")

rank_2017<- hospitalranks_2017_html %>% html_nodes("td:nth-child(1)") %>% html_text() %>% data.frame() %>% rename(rank = ".")

hospital_2017<-hospitalranks_2017_html %>% html_nodes("td:nth-child(2)") %>% html_text() %>% data.frame() %>% rename(hospital = ".")

points_2017<-hospitalranks_2017_html %>% html_nodes("td:nth-child(3)") %>% html_text() %>% data.frame() %>% rename(points = ".")

hospitals_2017<-cbind(rank_2017, hospital_2017, points_2017)

hospitals_2017<-hospitals_2017[2:21,]


```



```{r}
hospitalranks_2016_html <- read_html("https://web.archive.org/web/20160816171510/http://health.usnews.com/health-care/best-hospitals/articles/best-hospitals-honor-roll-and-overview")

rank_2016<- hospitalranks_2016_html %>% html_nodes("td:nth-child(1)") %>% html_text() %>% data.frame() %>% rename(rank = ".")

hospital_2016<-hospitalranks_2016_html %>% html_nodes("td:nth-child(2)") %>% html_text() %>% data.frame() %>% rename(hospital = ".")

points_2016<-hospitalranks_2016_html %>% html_nodes("td:nth-child(3)") %>% html_text() %>% data.frame() %>% rename(points = ".")

hospitals_2016<-cbind(rank_2016, hospital_2016, points_2016)

hospitals_2016<-hospitals_2016[2:21,]


